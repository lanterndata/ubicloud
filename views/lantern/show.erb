<% @page_title = @pg[:name] %>

<div class="space-y-1">
  <%== render(
    "components/breadcrumb",
    locals: {
      back: "#{@project_data[:path]}/lantern",
      parts: [
        %w[Projects /project],
        [@project_data[:name], @project_data[:path]],
        ["Lantern Databases", "#{@project_data[:path]}/lantern"],
        [@pg[:name], "#"]
      ]
    }
  ) %>
  <%== render(
    "components/page_header",
    locals: {
      title: @pg[:name],
      right_items: [render("components/pg_state_label", locals: { state: @pg[:state], extra_class: "text-md" })]
    }
  ) %>
</div>
<div class="grid gap-6">
  <!-- Detail Card -->
  <% data = [
    ["ID", @pg[:ubid]],
    ["Name", @pg[:name]],
    ["VM", @pg[:vm_name]],
    ["Label", @pg[:label]],
    ["Org Id", @pg[:org_id]],
    ["Instance Type", @pg[:instance_type]],
    ["Lantern Version", @pg[:lantern_version]],
    ["Extras Version", @pg[:extras_version]],
    ["Minor Version", @pg[:minor_version]],
    ["Location", @pg[:location]],
    ["Compute", @pg[:vm_size]],
    ["Storage", "#{@pg[:storage_size_gib]} GB"]
  ]

  if @pg[:connection_string] == ""
    data.push(["Connection String", "Waiting for host to be ready..."])
  else
    data.push(["Connection String", @pg[:connection_string], { copieble: true, revealable: true }])
  end %>
  <%== render("components/kv_data_card", locals: { data: data }) %>
  <!-- Reset password -->
  <% if @pg[:primary?] %>
    <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
      <div class="px-4 py-5 sm:p-6">
        <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/reset-user-password" %>" role="form" method="POST">
          <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/reset-user-password") %>
          <div class="space-y-4">
            <div>
              <h2 class="text-lg font-medium leading-6 text-gray-900">Reset user password</h2>
            </div>
            <div class="grid grid-cols-12 gap-6">
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "New password",
                    name: "original_password",
                    type: "password",
                    attributes: {
                      required: true
                    }
                  }
                ) %>
              </div>
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "New password (repeat)",
                    name: "repeat_password",
                    type: "password",
                    attributes: {
                      required: true
                    }
                  }
                ) %>
              </div>
              <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                <%== render("components/form/submit_button", locals: { text: "Reset" }) %>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  <% end %>
  <% if Authorization.has_permission?(@current_user.id, ["Postgres:edit", "Postgres:delete"], @pg[:id]) %>
    <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
      <!-- Restart Card -->
      <% if Authorization.has_permission?(@current_user.id, "Postgres:edit", @pg[:id]) %>
        <div class="px-4 py-5 sm:p-6">
          <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/restart" %>" role="form" method="POST">
            <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/restart") %>
            <div class="sm:flex sm:items-center sm:justify-between">
              <div>
                <h3 class="text-base font-semibold leading-6 text-gray-900">Restart Lantern database</h3>
                <div class="mt-2 text-sm text-gray-500">
                  <p>This action will restart the Lantern database. The database will be offline momentarily, and all
                    connections will be dropped.</p>
                </div>
              </div>
              <div id="lantern-restart-<%=@pg[:ubid]%>" class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center">
                <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                  <%== render("components/form/submit_button", locals: { text: "Restart", extra_class: "restart-btn" }) %>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/update-extension" %>" role="form" method="POST">
            <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/update-extension") %>
            <div class="sm:flex sm:items-center sm:justify-between">
              <div>
                <h3 class="text-base font-semibold leading-6 text-gray-900">Update Lantern/Extras extensions</h3>
                <div class="mt-2 text-sm text-gray-500">
                  <p>This action will update the extensions, it will not restart the database</p>
                </div>
              </div>
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "Lantern version",
                    name: "lantern_version",
                    type: "text",
                    attributes: {
                      required: true,
                      value: @pg[:lantern_version]
                    }
                  }
                ) %>
              </div>
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "Lantern Extras version",
                    name: "extras_version",
                    type: "text",
                    attributes: {
                      required: true,
                      value: @pg[:extras_version]
                    }
                  }
                ) %>
              </div>
              <div
                id="lantern-extension-update-<%=@pg[:ubid]%>"
                class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center"
              >
                <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                  <%== render("components/form/submit_button", locals: { text: "Update Extensions", extra_class: "update-btn" }) %>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/update-image" %>" role="form" method="POST">
            <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/update-image") %>
            <div class="sm:flex sm:items-center sm:justify-between">
              <div>
                <h3 class="text-base font-semibold leading-6 text-gray-900">Update Container Image</h3>
                <div class="mt-2 text-sm text-gray-500">
                  <p>This action will update the extensions, it will restart the database</p>
                </div>
              </div>
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "Lantern version",
                    name: "img_lantern_version",
                    type: "text",
                    attributes: {
                      required: true,
                      value: @pg[:lantern_version]
                    }
                  }
                ) %>
              </div>
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "Lantern Extras version",
                    name: "img_extras_version",
                    type: "text",
                    attributes: {
                      required: true,
                      value: @pg[:extras_version]
                    }
                  }
                ) %>
              </div>
              <div class="col-span-12 sm:col-span-5">
                <%== render(
                  "components/form/text",
                  locals: {
                    label: "Minor version",
                    name: "img_minor_version",
                    type: "text",
                    attributes: {
                      required: true,
                      value: @pg[:minor_version]
                    }
                  }
                ) %>
              </div>
              <div id="lantern-image-update-<%=@pg[:ubid]%>" class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center">
                <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                  <%== render("components/form/submit_button", locals: { text: "Update Image", extra_class: "restart-btn" }) %>
                </div>
              </div>
            </div>
          </form>
        </div>
        <% if !@pg[:domain?] %>
          <div class="px-4 py-5 sm:p-6">
            <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/add-domain" %>" role="form" method="POST">
              <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/add-domain") %>
              <div class="sm:flex sm:items-center sm:justify-between">
                <div>
                  <h3 class="text-base font-semibold leading-6 text-gray-900">Add Domain</h3>
                  <div class="mt-2 text-sm text-gray-500">
                    <p>This action will create DNS record and obtain SSL certificate via acme</p>
                  </div>
                </div>
                <div class="col-span-12 sm:col-span-5">
                  <%== render(
                    "components/form/text",
                    locals: {
                      label: "Domain",
                      name: "domain",
                      type: "text",
                      attributes: {
                        required: true,
                        placeholder: @pg[:domain] || "#{@pg[:org_id]}-#{@pg[:name]}.#{Config.lantern_top_domain}"
                      }
                    }
                  ) %>
                </div>
                <div id="lantern-ssl-<%=@pg[:ubid]%>" class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center">
                  <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                    <%== render("components/form/submit_button", locals: { text: "Add domain", extra_class: "update-btn" }) %>
                  </div>
                </div>
              </div>
            </form>
          </div>
        <% end %>
        <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
          <div class="px-4 py-5 sm:p-6">
            <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/update-vm" %>" role="form" method="POST">
              <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/update-vm") %>
              <div class="space-y-4">
                <div>
                  <h2 class="text-lg font-medium leading-6 text-gray-900">Update VM Size and Storage</h2>
                </div>
                <div class="grid grid-cols-12 gap-6">
                  <div class="col-span-12 sm:col-span-5">
                    <%== render(
                      "components/form/select",
                      locals: {
                        name: "size",
                        label: "VM Size",
                        options: Option::LanternSizes.map { [_1[:vm_size], _1[:vm_size]] }.to_h,
                        selected: @pg[:vm_size]
                      }
                    ) %>
                  </div>
                  <div class="col-span-12 sm:col-span-5">
                    <%== render(
                      "components/form/text",
                      locals: {
                        label: "Storage (Gib)",
                        name: "storage_size_gib",
                        type: "text",
                        attributes: {
                          value: @pg[:storage_size_gib]
                        }
                      }
                    ) %>
                  </div>
                  <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                    <%== render("components/form/submit_button", locals: { text: "Update VM" }) %>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      <% end %>
      <!-- Delete Card -->
      <% if Authorization.has_permission?(@current_user.id, "Postgres:delete", @pg[:id]) %>
        <div class="px-4 py-5 sm:p-6">
          <div class="sm:flex sm:items-center sm:justify-between">
            <div>
              <h3 class="text-base font-semibold leading-6 text-gray-900">Delete Lantern database</h3>
              <div class="mt-2 text-sm text-gray-500">
                <p>This action will permanently delete this Lantern database.</p>
              </div>
            </div>
            <div id="postgres-delete-<%=@pg[:ubid]%>" class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center">
              <%== render(
                "components/delete_button",
                locals: {
                  url: request.path,
                  confirmation: @pg[:name],
                  redirect: "#{@project_data[:path]}/lantern"
                }
              ) %>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Reader Servers -->
      <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium leading-6 text-gray-900">Reader Servers</h2>
          <ul>
            <% @pg[:servers].select { !_1[:primary] }.each do |server| %>
              <li>
                <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
                  <!-- Detail Card -->
                  <% data = [
                    ["ID", server[:ubid]],
                    ["VM", server[:vm_name]],
                    ["Lantern Version", server[:lantern_version]],
                    ["Extras Version", server[:extras_version]],
                    ["Minor Version", server[:minor_version]],
                    ["Compute", server[:vm_size]],
                    ["Storage", "#{server[:storage_size_gib]} GB"]
                  ]

                  if server[:connection_string] == ""
                    data.push(["Connection String", "Waiting for host to be ready..."])
                  else
                    data.push(["Connection String", server[:connection_string], { copieble: true, revealable: true }])
                  end %>

                  <%== render("components/pg_state_label", locals: { state: server[:state], extra_class: "text-md" }) %>
                  <%== render("components/kv_data_card", locals: { data: data }) %>
                  <div class="flex items-center">
                    <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/replica/#{server[:id]}/promote" %>" role="form" method="POST">
                      <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/replica/#{server[:id]}/promote") %>
                      <%== render("components/form/submit_button", locals: { text: "Promote" }) %>
                    </form>
                    <div
                      id="postgres-delete-replica-<%=server[:id]%>"
                      class="mt-5 sm:ml-6 sm:mt-0 sm:flex sm:flex-shrink-0 sm:items-center"
                    >
                      <%== render(
                        "components/delete_button",
                        locals: {
                          url: "#{@project_data[:path]}#{@pg[:path]}/replica/#{server[:id]}",
                          confirmation: "delete",
                          redirect: "#{@project_data[:path]}#{@pg[:path]}"
                        }
                      ) %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <!-- Add Replica Server -->
      <div class="overflow-hidden rounded-lg shadow ring-1 ring-black ring-opacity-5 bg-white divide-y divide-gray-200">
        <div class="px-4 py-5 sm:p-6">
          <form action="<%= "#{@project_data[:path]}#{@pg[:path]}/replica" %>" role="form" method="POST">
            <%== csrf_tag("#{@project_data[:path]}#{@pg[:path]}/replica") %>
            <div class="space-y-4">
              <div>
                <h2 class="text-lg font-medium leading-6 text-gray-900">Add Replica Server</h2>
              </div>
              <div class="grid grid-cols-12 gap-6">
                <div class="col-span-12 sm:col-span-5">
                  <%== render(
                    "components/form/text",
                    locals: {
                      label: "Lantern Version",
                      name: "replica_lantern_version",
                      type: "text",
                      attributes: {
                        required: true,
                        value: Config.lantern_default_version
                      }
                    }
                  ) %>
                </div>
                <div class="col-span-12 sm:col-span-5">
                  <%== render(
                    "components/form/text",
                    locals: {
                      label: "Extras Version",
                      name: "replica_extras_version",
                      type: "text",
                      attributes: {
                        required: true,
                        value: Config.lantern_extras_default_version
                      }
                    }
                  ) %>
                </div>
                <div class="col-span-12 sm:col-span-5">
                  <%== render(
                    "components/form/text",
                    locals: {
                      label: "Minor Version",
                      name: "replica_minor_version",
                      type: "text",
                      attributes: {
                        required: true,
                        value: Config.lantern_minor_default_version
                      }
                    }
                  ) %>
                </div>
                <div class="col-span-12 sm:col-span-5">
                  <%== render(
                    "components/form/select",
                    locals: {
                      name: "replica_vm_size",
                      label: "VM Size",
                      options: Option::LanternSizes.map { [_1[:vm_size], _1[:vm_size]] }.to_h,
                      selected: @pg[:vm_size]
                    }
                  ) %>
                </div>
                <div class="col-span-12 sm:col-span-2 flex justify-end items-end">
                  <%== render("components/form/submit_button", locals: { text: "Add Replica" }) %>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% end %>
</div>
